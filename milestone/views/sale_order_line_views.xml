<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="milestone" string="Milestone"/>
            </xpath>
        </field>
    </record>
    <record id="button_order_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.milestone</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button type="object" name="action_create_project" string="Create Project"
                        invisible="state  in ['confirmed']" class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>

