<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="lease_management_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="text-center">
                                <h1>Lease Management</h1>
                            </div>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Property</th>
                                        <th>Owner Name</th>
                                        <th>Type</th>
                                        <th>Tenant Name</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc_data['report_data']" t-as="line">
                                        <td>
                                            <span t-field="line.property_name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.owner_name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.type"/>
                                        </td>
                                        <td>
                                            <span t-field="line.tenant_name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.date_start"/>
                                        </td>
                                        <td>
                                            <span t-field="line.date"/>
                                        </td>
                                        <td>
                                            <span t-field="line.rental_amount"/>
                                        </td>
                                        <td>
                                            <span t-field="line.state"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
