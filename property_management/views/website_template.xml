<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="web_form_template">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_website_form" data-vcss="001" data-snippet="s_website_form">
                    <div class="container">
                        <form action="/rent_lease/submit" enctype="multipart/form-data" class="o_mark_required"
                              data-mark="*" data-model_name="" data-success-page="">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                <div style="margin-bottom:40px;margin-top:30px;">
                                    <h3>Property Management</h3>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field" style="margin-bottom:20px;">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px" for="studio1">
                                            <span class="s_website_form_label_content" style="padding-top: 9px">Tenant
                                            </span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <t t-foreach="tenant_id" t-as="tenant">
                                                <option t-att-value="tenant.id" t-esc="tenant.name"/>
                                            </t>
                                            <input id="tenant_id" type="text" class="form-control s_website_form_input"
                                                   name="tenant_id" required="1" t-att-value="request.env.user.name"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field" style="margin-bottom:20px;">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px" for="studio1">
                                            <span class="s_website_form_label_content">Type</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="type"
                                                    t-attf-class="form-control select_box_test" required="1">
                                                <option value="rent">Rent</option>
                                                <option value="lease">Lease</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field" style="margin-bottom:20px;">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px" for="property_id">
                                            <span class="s_website_form_label_content">Property</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <div class="col-sm">
                                                <select id="property_id" name="property_id"
                                                    class="form-control s_website_form_input">
                                                <t t-foreach="properties" t-as="property">
                                                    <option t-esc="property.property_name" t-att-value="property.id"/>
                                                </t>
                                            </select>
                                        </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field" style="margin-bottom:20px;">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px" for="studio1">
                                            <span class="s_website_form_label_content">Start Date</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="date_start" type="datetime-local"  t-field-options='{"format": "%Y-%m-%d %H:%M:%S"}'
                                                   class="form-control s_website_form_input"
                                                   name="date_start" required="1"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field" style="margin-bottom:20px;">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px" for="studio1">
                                            <span class="s_website_form_label_content">End Date</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="date" t-field-options='{"format": "%Y-%m-%d %H:%M:%S"}'
                                                   class="form-control s_website_form_input"
                                                   name="date" required="1"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_submit" data-name="Submit Button" style="margin-bottom:20px;">
                                    <div style="width: 200px;" class="s_website_form_label"/>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>
