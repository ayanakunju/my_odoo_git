<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_warning_message_wizard" model="ir.ui.view">
        <field name="name">warning.message.wizard</field>
        <field name="model">warning.message.wizard</field>
        <field name="arch" type="xml">
            <form string="Warning Message">
                <group>
                    <field name="message" />
                </group>
                <footer>
                    <button name="accept" string="Accept" type="object" class="btn-success"/>
                    <button name="reject" string="Reject" type="object" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_warning_message_wizard" model="ir.actions.act_window">
        <field name="name">Warning Message</field>
        <field name="res_model">warning.message.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
