<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="product_brand.ProductInfoPopup" t-inherit="point_of_sale.ProductInfoPopup" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('extra')]" position="after">
            <div class="section-product-brand mt-3 mb-4 pb-4 border-bottom text-start">
              <t t-if="props.product.product_brand">
                <h3 class="section-title">Brand Name :</h3>
                  <t t-esc="props.product.product_brand"/>
              </t>
            </div>
        </xpath>
    </t>
</templates>
